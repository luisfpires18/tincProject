<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - t'inc</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("t'inc", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Desportos", "Index", "Desporto")</li>
                    <li>@Html.ActionLink("Eventos", "Index", "Evento")</li>
                    <li>@Html.ActionLink("Provas", "Index", "Prova")</li>
                    <li>@Html.ActionLink("Categorias", "Index", "Categoria")</li>
                    <li>@Html.ActionLink("Extras", "Index", "Extra")</li>
                    <li>@Html.ActionLink("Resultados", "Index", "Resultado")</li>
                    <li>@Html.ActionLink("Equipas", "Index", "Equipa")</li>
                    <li>@Html.ActionLink("Inscricoes", "Index", "Inscricao")</li>
                    <li>@Html.ActionLink("Pessoas", "Index", "Pessoa")</li>
                    <li>@Html.ActionLink("Pedidos", "Index", "Pedido")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - t'inc</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
